FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    bash \
    curl \
    ca-certificates \
 && rm -rf /var/lib/apt/lists/*

# Copy the pre-downloaded dmtrctl binary from host
COPY demeter/dmtrctl /usr/local/bin/dmtrctl
RUN chmod +x /usr/local/bin/dmtrctl

RUN mkdir -p /tunnel

# Copy and prepare the tunnel start script
COPY start-tunnel.sh /start-tunnel.sh
RUN chmod +x /start-tunnel.sh

WORKDIR /tunnel
CMD ["/start-tunnel.sh"]
